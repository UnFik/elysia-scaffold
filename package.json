{
  "name": "bun-elysia-drizzle",
  "version": "1.0.0",
  "module": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "bundle": "bun build --entrypoints ./src/server.ts --outdir ./dist --target bun",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server src/server.ts",
    "start": "NODE_ENV=production bun src/server.ts",
    "test": "bun test -- ./test/*.ts",
    "migration:create": "bunx --bun drizzle-kit generate",
    "migration:drop": "bunx --bun drizzle-kit drop",
    "migration:run": "bunx --bun drizzle-kit migrate",
    "migration:snapshots": "bunx --bun drizzle-kit up"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.0",
    "@elysiajs/eden": "^1.2.0",
    "@elysiajs/jwt": "^1.2.0",
    "@elysiajs/swagger": "^1.2.0",
    "better-auth": "^1.2.0",
    "drizzle-orm": "^0.41.0",
    "drizzle-typebox": "^0.3.1",
    "elysia": "^1.4.21",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/bun": "^1.2.9",
    "drizzle-kit": "^0.30.6",
    "sql-log-prettifier": "^0.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
